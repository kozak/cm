.page-header
  %h1
    Clients
    = link_to [:refresh, :clients], :class => 'btn pull-right' do
      %i.icon-refresh
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Nip
      %th Actions
  %tbody
    - @clients.each do |client|
      %tr
        %td= link_to client, client
        %td= client.nip
        %td
          = link_to 'Edit', [:edit, client], :class => 'btn btn-mini'
          = link_to 'Destroy', client, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-mini btn-danger'
