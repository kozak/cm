.page-header
  %h1 New Invoice

= simple_form_for :invoice, :url => :invoices, :html => { :class => 'form-horizontal' } do |f|
  = f.input :client_id, :collection => Client.select_options, :prompt => false, :input_html => { :class => "span6" }
  = f.input :date, :input_html => { :value => Date.today.to_s, :class => "span6" }
  .form-actions
    = f.button :submit, 'Create invoice',  :class => 'btn-primary'
    = link_to 'Cancel', :invoices, :class => 'btn'
