.page-header
  %h1
    Invoices
    = link_to [:refresh, :invoices], :class => 'btn pull-right' do
      %i.icon-refresh

#invoices_chart{data: {invoices: invoices_chart_data}}

%table#invoices.table.table-striped
  %thead
    %tr
      %th Number
      %th Client
      %th Total gross
      %th Total gross in PLN
      %th Created on
      %th Actions
  %tbody
    = render @invoices

= link_to 'New', [:new, :invoice], :class => 'btn btn-primary'
