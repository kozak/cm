.page-header
  %h1 Exchange Rate

%p
  %strong Rate:
  %br
  = @exchange_rate.rate
%p
  %strong Currency:
  %br
  = @exchange_rate.currency
%p
  %strong Date:
  %br
  = @exchange_rate.date
%p
  %strong Table:
  %br
  = @exchange_rate.table

.form-actions
  = link_to 'Back', :exchange_rates, :class => 'btn'
  = link_to 'Edit', [:edit, @exchange_rate], :class => 'btn'
  = link_to 'Destroy', @exchange_rate, :method => "delete", :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-danger'
