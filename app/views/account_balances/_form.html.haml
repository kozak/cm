= simple_form_for :account_balances, :url => :account_balances, :html => { :class => 'form-horizontal' } do |f|
  = f.input :created_on, :input_html => {:value => Date.today}
  - Bank.all.each do |bank|
    %h3= bank
    - bank.accounts.each do |account|
      = f.input :amount, :label => account, :input_html => {:name => "account_balances[#{account.id}][amount]"}
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to_cancel :banks
